pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }
    stage('Build') {
      steps { echo 'Build step - configure your build commands' }
    }
    stage('Test') {
      steps { echo 'Run tests - configure test commands' }
    }
  }
  post {
    always { echo 'Pipeline finished' }
  }
}
